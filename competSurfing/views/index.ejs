<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  
  <title>Surfer Compet</title>

  <link rel="icon" href="/assets/favicon.png">
    
  <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> -->

  <script src="https://kit.fontawesome.com/8f45faa16b.js" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="/assets/style.css">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="css/bootstrap.min.css"> 
</head>
<body>
    <!-- start navbar  -->
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>                        
                </button>
                <a class="navbar-brand" href="/">SurFerCompet</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/">Home</a></li>
                    <li><a href="/add">New competitor</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a  data-toggle="modal" data-target="#signIn"> Sign in</a></li>
                    <li><a  data-toggle="modal" data-target="#login"> Login</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- end navbar  -->

    <!-- start register Modal -->
    <div class="modal fade" id="signIn" role="dialog"">
        <div class="modal-dialog">
        
            <!-- Modal content-->
            <div class="modal-content"  style="background-image: url(../assets/img3.png); background-size: cover;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create a new account</h4>
                </div>
                <div class="modal-body" style="color: orange;">
                  <form>
                    <div class="form-row">
                        <div class="form-group col-md-6" style="margin: 10px 0;">
                            <label for="inputEmail4">First Name</label>
                            <input type="name" class="form-control" id="firstName" placeholder="first name">
                        </div>
                        <div class="form-group col-md-6" style="margin: 10px 0;">
                            <label for="inputPassword4">Last Name</label>
                            <input type="lastName" class="form-control" id="lasName" placeholder="last name">
                        </div>
                        <div class="form-group" style="margin: 10px 15px;">
                            <label for="regEmail">Email</label>
                            <input type="regEmail" class="form-control" id="regEmail" placeholder="Email">
                        </div>
                        <div class="form-group col-md-6" style="margin: 10px 0;">
                            <label for="regPassword">Password</label>
                            <input type="password" class="form-control" id="regPassword" placeholder="password">
                        </div>
                        <div class="form-group col-md-6" style="margin: 10px 0;">
                            <label for="password">Repetez Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Password">
                        </div>
                        <div class="form-group col-md-6" style="margin: 10px 0;">
                            <label for="phone">Phone</label>
                            <input type="phone" class="form-control" id="phone" placeholder="+212 XXX XX XX XX">
                        </div>
                        <div class="form-group col-md-6" style="margin: 10px 0;">
                            <label for="city">City</label>
                            <input type="text" class="form-control" id="city" placeholder="City">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-warning" style="margin-left: 16px;">Register</button>
                  </form>
                </div>
            </div>
          
        </div>
    </div>
    <!-- end register modal  -->

     <!-- Start login  Modal -->
     <div class="modal fade" id="login" role="dialog"">
        <div class="modal-dialog">
        
            <!-- Modal content-->
            <div class="modal-content"  style="background-image: url(../assets/logimg.jpeg); background-size: cover;width: 60%; margin: auto;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Login to your account</h4>
                </div>
                <div class="modal-body" style="color: orange;">
                  <form>
                    <div class="form-row">
                        <div class="form-group" style="margin: 10px 15px;">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Email">
                        </div>
                        <div class="form-group" style="margin: 10px 15px;">
                            <label for="password">Email</label>
                            <input type="password" class="form-control" id="logPassword" placeholder="***********">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-warning" style="margin-left: 16px;">Register</button>
                  </form>
                </div>
            </div>
          
        </div>
    </div>
    <!-- end login modal  -->

    <!-- start content  -->
    <div class="container">
        <div class="gif">

        </div>
        <div class="container text-center justify-content-center mt-5">
            <h3 style="margin-bottom: 50px;">List of candidates</h3>
            <div class="row bg-info">
                    <% planch.forEach(p => { %>
            
                    <div class="card col-sm-3 mt-2" style="margin: 25px 0;">

                        <a href="/edit/<%= p.ID %>" class="text-success" style="font-size: 18px;">
                            <i class="fas fa-edit    "></i>
                        </a>

                        <img src="<%= p.image %>"  style="width:40%; border-radius: 50%;">

                        <a href="/delete/<%= p.ID %>" class="text-danger" style="font-size: 16px;" onclick="return confirm('Competitor has been deleted')">
                            <i class="fa fa-window-close" aria-hidden="true"></i>
                        </a>

                        <div class="card-body">
                            <h4 class="card-title"><%= p.name %></h4>
                            <p class="card-text"><%= p.ville %></p>
                            <p class="card-text" style="font-weight: bold;"><%= p.typeOfSurf %> </p>
                        </div>
                    
                    </div>
                    <% }) %>
                    
                </div>	
          </div>
    </div>
    <!-- end content  -->
    <!-- footer  -->
    <footer class="container-fluid">
        <div class="container">
            <div class="d-flex justify-content-between bg-secondary mb-3" style="justify-content: space-between; display: flex; flex-wrap: wrap;">
                <p class="p-2 col"> Copyright 2020 Â©, YouCode - All Rights Reserved. </p>
                <div class="p-2 col">
                    <i class="fa fa-whatsapp" aria-hidden="true"></i>
                    <i class="fa fa-facebook" aria-hidden="true"></i>
                    <i class="fa fa-instagram" aria-hidden="true"></i>
                    <i class="fa fa-youtube" aria-hidden="true"></i>
                    <i class="fa fa-twitter" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </footer>
  
    <script src="js/jquery-3.4.1.slim.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>
</html>
