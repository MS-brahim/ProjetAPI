<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  
  <title>Surfer Compet</title>

  <link rel="icon" href="/assets/favicon.png">
    
  <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> -->

  <script src="https://kit.fontawesome.com/8f45faa16b.js" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="/assets/style.css">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="css/bootstrap.min.css"> 
</head>
<body>
    <!-- start navbar  -->
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>                        
                </button>
                <a class="navbar-brand" href="/">SurFerCompet</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/">Home</a></li>
                    <li><a href="/add">New competitor</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- end navbar  -->

    <!-- start content  -->
    <div class="container">
        <div class="gif">

        </div>
        <div class="container text-center justify-content-center mt-5">
            <h2 style="margin-bottom: 50px; ">List of candidates</h2>
            <div class="row bg-info" >
                    <% planch.forEach(p => { %>
            
                    <div class="card col-sm-3 mt-2"  style="margin: 25px 0;">

                        <a href="/edit/<%= p.ID %>" class="text-success" style="font-size: 18px;">
                            <i class="fas fa-edit    "></i>
                        </a>

                        <img src="<%= p.image %>"  style="width:40%; border-radius: 50%;">

                        <a href="/delete/<%= p.ID %>" class="text-danger" style="font-size: 16px;" onclick="return confirm('Competitor has been deleted')">
                            <i class="fa fa-window-close" aria-hidden="true"></i>
                        </a>

                        <div class="card-body" style="text-align: start; margin-left: 55px;">
                            <h4 class="card-title">Name : <span class="text-primary"><%= p.name %></span></h4>
                            <hr>
                            <h4 class="card-text">City : <span class="text-primary"><%= p.ville %></span></h4>
                            <hr>
                            <p class="card-text" style="font-weight: bold;">Game : <span class="text-primary"><%= p.typeOfSurf %></span></p>
                        </div>
                    
                    </div>
                    <% }) %>
                    
                </div>	
          </div>
    </div>
    <!-- end content  -->
    <!-- footer  -->
    <footer class="container-fluid">
        <div class="container">
            <div class="d-flex justify-content-between bg-secondary mb-3" style="justify-content: space-between; display: flex; flex-wrap: wrap;">
                <p class="p-2 col"> Copyright 2020 Â©, YouCode - All Rights Reserved. </p>
                <div class="p-2 col">
                    <i class="fa fa-whatsapp" aria-hidden="true"></i>
                    <i class="fa fa-facebook" aria-hidden="true"></i>
                    <i class="fa fa-instagram" aria-hidden="true"></i>
                    <i class="fa fa-youtube" aria-hidden="true"></i>
                    <i class="fa fa-twitter" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </footer>
    

    <script src="js/jquery-3.4.1.slim.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>
</html>
